{
  "id": "default",
  "script": {
    "lang": "mustache",
    "source": {
      "query": {
        "nested": {
          "path": "@graph",
          "query": {
            "bool": {
              "must": [
                {
                  "prefix": {
                    "@graph.hasName.family": "{{prefix}}"
                  }
                },
                {
                  "term": {
                    "@graph.@type": "Expert"
                  }
                }
              ]
            }
          }
        }
      },
      "_source": [
        "@id",
        "@type",
        "name",
        "contactInfo",
        "title",
        "issued",
        "container-title",
        "type",
        "DOI"
      ],
      "sort": [
        "@graph.hasName.family",
        "@graph.hasName.given"
      ],
      "from": "{{from}}{{^from}}0{{/from}}",
      "size": "{{size}}{{^size}}10{{/size}}"
    },
    "params": {
      "prefix": "A"
    }
  }
}
