{
  "project":"${G[project]}",
  "env":"${G[env]}",
  "envs": {
    "dev":{
      "mount":"spa",
      "org":"localhost/aggie-experts",
      "tag":"dirty",
      "branch":"!^(dev|main)",
      "host":"!(experts.library.ucdavis.edu)",
      "gcs":"fcrepo-dev",
      "gcs-subscription":"local-dev"
    },
    "clean":{
      "org":"localhost/aggie-experts",
      "tag":"$(${G[git]} describe --always --dirty)",
      "branch":"!^(dev|main)",
      "host":"!(experts.library.ucdavis.edu)",
      "gcs":"fcrepo-dev"
    },
    "sandbox":{
      "org":"localhost/aggie-experts",
      "tag":"$(${G[git]} describe --always --dirty)",
      "branch":".*",
      "host":"experts.library.ucdavis.edu",
      "gcs":"fcrepo-sandbox"
    },
    "test":{
      "org":"us-west1-docker.pkg.dev/aggie-experts/docker",
      "tag":"$(${G[git]} describe --always --dirty)",
      "host":"^(blue|gold).experts.library.ucdavis.edu",
      "gcs":"fcrepo-prod",
      "branch":"(dev|main)"
    },
    "build":{
      "org":"us-west1-docker.pkg.dev/aggie-experts/docker",
      "tag":"$(${G[git]} describe --always --dirty)"
    },
    "prod":{
      "org":"us-west1-docker.pkg.dev/aggie-experts/docker",
      "tag":"$(${G[git]} describe --always --dirty)",
      "host":"experts.library.ucdavis.edu",
      "branch":"main",
      "gcs":"fcrepo-prod"
    }
  },
  "template": {
    "default":"docker-template.yaml",
    "fuseki":"docker-template-fuseki.yaml"
  },
  "fin":{
    "org":"gcr.io/ucdlib-pubreg",
    "tag":"2.3.1"
  },
  "debug":{
    "config":"${G[config]}"
  },
  "deploy": {
    "keycloak":"auth"
  },
  "git":{
    "root":"$(${G[git]} rev-parse --show-toplevel)",
    "repo":"$(basename -s .git $(${G[git]} config --get remote.origin.url))",
    "branch":"$(${G[git]} branch --show-current)"
  }
}
